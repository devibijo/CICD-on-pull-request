{
  "name": "cicd_pipeline_playwright",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.0",
    "@types/node": "^24.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
"scripts": {
  "lint": "eslint --ext .ts,.js .",
  "lint-and-fix": "eslint . --ext .ts --fix",
  "build": "playwright install --with-deps",
  "start": "playwright test --project=chromium",
  "test": "playwright test",
  "test-headless": "playwright test --headed",
  "test-report": "playwright show-report" ,
  "test-trace": "playwright test --trace on-first-retry",
  "test-debug": "pwsh ./ci/playwright_debug.sh",
  "test-firefox": "playwright test --project=firefox",
  "test-webkit": "playwright test --project=webkit"
}
}
